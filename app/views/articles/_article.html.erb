

<div class="row">
  <div class="col-md-12">
    <div class="page-header">
      <h2 class="article-title">
        <% if current_page?(articles_path) %>
          <%= link_to article.title, article %>
          <% else %>
          <%= article.title %>
          <% end %>
        <small>
          by <%= article.user.firstname %> <%= article.user.lastname[0] %>
        </small>
        <small class="pull-right">
          <%= time_ago_in_words(article.created_at) %>
          ago
        </small>
      </h2>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-md-12">
  <%= article.content.html_safe  %>
    </div>
  </div>
</div>
